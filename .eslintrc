{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 0,
    "brace-style": [2, "stroustrup"],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [2, "self"],
    "indent": [2, 2],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "keyword-spacing": 2,
    "max-len": [1, 80, 2],
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-unused-expressions": 1,
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used"
    }],
    "no-use-before-define": [2, "nofunc"],
    "no-warning-comments": 2,
    "no-plusplus": 1,
    "quotes": [2, "single"],
    "object-curly-spacing": [2, "never"],
    "radix": 2,
    "semi": [2, "always"],
    "sort-vars": 0,
    "space-before-blocks": 2,
    "space-before-function-paren": 0,
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "strict": 1,
    "use-isnan": 2,
    "valid-jsdoc": [1, {
      "requireReturn": false
    }],
    "valid-typeof": 2,
    "wrap-iife": 0,
    "wrap-regex": 0
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": false,
    "generators": true,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "restParams": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true,
    "globalReturn": false
  }
}
